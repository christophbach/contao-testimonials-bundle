{
    "name": "plenta/contao-testimonials-bundle",
    "type": "contao-bundle",
    "description": "Testimonials for Contao",
    "keywords": ["contao", "testimonial", "attestation", "reference"],
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Christian Barkowsky",
            "homepage": "https://plenta.io"
        },
        {
            "name": "Plenta.io",
            "homepage": "https://plenta.io"
        }
    ],
    "funding": [{
        "type": "github",
        "url": "https://github.com/christianbarkowsky"
    }],
    "support":{
        "issues": "https://github.com/plenta/contao-testimonials-bundle/issues",
        "source": "https://github.com/plenta/contao-testimonials-bundle",
        "docs": "https://plenta.io"
    },
    "require": {
        "php": "^8.1",
        "contao/core-bundle": "^4.13 || ^5.0",
        "contao/manager-plugin": "^2.11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.10",
        "contao/test-case": "^4.4.0",
        "symfony/phpunit-bridge": "v5.3.8",
        "contao/news-bundle": "^5.1",
        "friendsofphp/php-cs-fixer": "^3.2"
    },
    "extra": {
        "contao-manager-plugin": "Plenta\\ContaoTestimonialsBundle\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "Plenta\\ContaoTestimonialsBundle\\": "src"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "contao-components/installer": true,
            "contao/manager-plugin": true,
            "php-http/discovery": true
        }
    }
}
